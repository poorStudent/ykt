<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/icve_view"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/design_default_color_secondary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:id="@+id/icve_notwk"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="121dp"
                android:layout_height="93dp">

                <ImageView
                    android:id="@+id/icve_kctp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/ic_launcher_round"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/icve_kcmc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:text="2222222222222222"
                    android:textColor="@color/material_on_surface_emphasis_high_type"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/icve_cjsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:maxLines="1"
                    android:text="创建时间: 222222222"
                    android:textColor="@color/material_on_surface_emphasis_medium"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/icve_xxsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:maxLines="1"
                    android:text="学习时长：444444444"
                    android:textColor="@color/material_on_surface_emphasis_medium"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/icve_kcjd"
                        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="4"
                        android:max="100"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/icve_jd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="进度: "
                        android:textColor="@color/material_on_surface_emphasis_medium"
                        android:textSize="13sp" />


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:id="@+id/icve_iswk"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:text="--------icve微课---------"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/mooc_view2"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/line1"
        android:layout_marginTop="0.1dp"
        android:background="@color/design_default_color_secondary" />
</LinearLayout>
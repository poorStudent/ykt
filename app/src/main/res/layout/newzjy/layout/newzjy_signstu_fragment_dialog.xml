<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/teal_200"
        android:gravity="center"
        android:maxLines="2"
        android:text="---功能不稳定 不要依赖---\n---支持手势以及补签---"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/newzjy_bt_qd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:text="全部签到(备用不建议用)" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/newzjy_bt_qd2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:text="全部签到2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/newzjy_bt_qbcd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:text="全部迟到" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/newzjy_bt_qbsj"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:text="全部事假" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/newzjy_bt_qbgj"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:text="全部公假" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/newzjy_bt_qbzt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:text="全部早退" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/newzjy_bt_qbbj"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:text="全部病假" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/newzjy_bt_qbqq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:text="全部缺勤" />


        </androidx.appcompat.widget.LinearLayoutCompat>


    </ScrollView>

</LinearLayout>